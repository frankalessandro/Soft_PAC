<div class="w-full h-full flex justify-center items-center">
    <!-- Modal con 70% de ancho y 60% de alto -->
    <div class="w-11/12 sm:w-3/5 h-4/5 bg-white rounded-lg shadow-md p-8 flex flex-col">
        <!-- Encabezado del formulario -->
        <!-- Contenido del formulario -->
        <div class="flex flex-col sm:flex-row mt-8">
            <!-- Columna izquierda con el logo -->
            <div class="w-full sm:w-1/2 flex justify-center items-center">
                <img src="../assets/logo.png" alt="Logo" class="w-full h-full"/>
            </div>
            <!-- Columna derecha con el formulario -->
            <div class="w-full sm:w-1/2 px-4 gap-5 p-2 flex flex-col">
                <div class="bg-green-800 w-1/2 text-white text-center py-4 rounded-r-lg">
                    <h2 class="text-lg font-semibold">Bienvenido</h2>
                </div>
                <form action="#" method="POST" class="space-y-4 gap-5 p-2 flex flex-col">
                    <!-- Input para el correo -->
                    <div>
                        <label for="correo" class="block font-medium">Correo Electrónico</label>
                        <input type="email" id="correo" name="correo" class="w-full rounded border-gray-300 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50">
                    </div>
                    <!-- Input para la contraseña -->
                    <div>
                        <label for="contrasena" class="block font-medium">Contraseña</label>
                        <input type="password" id="contrasena" name="contrasena" class="w-full rounded border-gray-300 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50">
                    </div>
                    <!-- Botón de enviar -->
                    <div class="flex justify-center">
                        <button type="submit" class="w-3/4 sm:w-1/2 bg-green-800 text-white rounded-lg py-2">Enviar</button>
                    </div>
                    <!-- Texto para crear cuenta y olvidar contraseña -->
                    <div class="flex justify-between flex-col items-center">
                        <a href="#" class="text-blue-600">Crear cuenta</a>
                        <a href="#" class="text-blue-600">¿Olvidaste tu contraseña?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>